{
	"name": "hiperf",
	"description": "High-performance web development architecture",
	"version": "0.0.2",
	"main": "index.js",
	"author": "Mikael Vesavuori",
	"license": "MIT",
	"devDependencies": {
		"autodll-webpack-plugin": "latest",
		"babel-core": "latest",
		"babel-eslint": "latest",
		"babel-loader": "latest",
		"babel-plugin-lodash": "latest",
		"babel-plugin-syntax-dynamic-import": "latest",
		"babel-preset-env": "latest",
		"babel-preset-stage-0": "latest",
		"brotli-gzip-webpack-plugin": "latest",
		"clean-css": "latest",
		"clean-css-loader": "latest",
		"clean-webpack-plugin": "latest",
		"css-loader": "latest",
		"extract-text-webpack-plugin": "latest",
		"file-loader": "latest",
		"html-webpack-plugin": "latest",
		"husky": "^0.14.3",
		"imports-loader": "latest",
		"lazysizes": "latest",
		"lighthouse": "latest",
		"lodash-webpack-plugin": "latest",
		"node-sass": "latest",
		"optimize-css-assets-webpack-plugin": "latest",
		"optimize-js-plugin": "latest",
		"path": "latest",
		"postcss-cssnext": "latest",
		"postcss-import": "latest",
		"postcss-loader": "latest",
		"precss": "latest",
		"raw-loader": "latest",
		"script-ext-html-webpack-plugin": "latest",
		"sitespeed.io": "latest",
		"size-limit": "latest",
		"style-loader": "latest",
		"sw-precache-webpack-plugin": "latest",
		"sw-toolbox": "latest",
		"uglify-js": "latest",
		"url-loader": "latest",
		"webpack": "latest",
		"webpack-bundle-analyzer": "latest",
		"webpack-dev-server": "latest",
		"webpack-merge": "latest"
	},
	"config": {
		"siteurl": "https://www.google.com"
	},
	"scripts": {
		"start": "test && yarn run dev",
		"size": "size-limit",
		"dev": "webpack-dev-server --open --config webpack.dev.js --host 0.0.0.0 --port 3000",
		"clean": "rm -rf dist && mkdir dist",
		"copy": "cp -R src/assets dist/ && cp src/* dist/",
		"prebuild": "yarn run clean",
		"build": "webpack --config webpack.prod.js --display-error-details",
		"postbuild": "yarn run size",
		"test": "echo \"Testing\"",
		"precommit": "yarn build && yarn test",
		"prepush": "npm version patch",
		"version": "yarn build && git add .",
		"postversion": "git push && git push --tags "
	},
	"size-limit": [
		{
			"limit": "50 KB",
			"webpack": false,
			"path": "dist/app.*.js"
		}
	]
}