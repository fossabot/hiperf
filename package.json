	"license": "MIT",
	"devDependencies": {
		"babel-core": "latest",
		"babel-eslint": "latest",
		"babel-loader": "latest",
		"babel-plugin-lodash": "latest",
		"babel-plugin-syntax-dynamic-import": "latest",
		"babel-preset-env": "latest",
		"babel-preset-stage-0": "latest",
		"brotli-gzip-webpack-plugin": "latest",
		"clean-css": "latest",
		"clean-css-loader": "latest",
		"clean-webpack-plugin": "latest",
		"copy-webpack-plugin": "latest",
		"css-loader": "latest",
		"eslint": "latest",
		"eslint-config-prettier": "^2.9.0",
		"eslint-plugin-prettier": "^2.6.0",
		"extract-text-webpack-plugin": "latest",
		"file-loader": "latest",
		"html-webpack-plugin": "latest",
		"husky": "latest",
		"imageoptim-cli": "latest",
		"imports-loader": "latest",
		"lazysizes": "latest",
		"lighthouse": "latest",
		"lodash-webpack-plugin": "latest",
		"node-sass": "latest",
		"optimize-css-assets-webpack-plugin": "latest",
		"optimize-js-plugin": "latest",
		"path": "latest",
		"postcss-cssnext": "latest",
		"postcss-import": "latest",
		"postcss-loader": "^2.1.0",
		"precss": "latest",
		"prettier": "^1.10.2",
		"prettier-stylelint": "^0.4.2",
		"raw-loader": "latest",
		"script-ext-html-webpack-plugin": "latest",
		"sitespeed.io": "^6.3.2",
		"size-limit": "latest",
		"sonarwhal": "latest",
		"style-loader": "latest",
		"stylelint": "^8.4.0",
		"svgo": "latest",
		"sw-precache-webpack-plugin": "latest",
		"sw-toolbox": "latest",
		"uglify-js": "latest",
		"url-loader": "latest",
		"webpack": "latest",
		"webpack-bundle-analyzer": "^2.10.0",
		"webpack-dev-server": "latest",
		"webpack-merge": "latest",
		"workbox-webpack-plugin": "latest"
	},
	"config": {
		"siteurl": "https://www.google.com",
		"imgsrc": "src/assets/images/",
		"imgdist": "dist/assets/images/",
		"gfxsrc": "src/assets/graphics/",
		"gfxdist": "dist/assets/graphics/"
	},
	"scripts": {
		"start": "test && yarn run dev",
		"dev": "webpack-dev-server --open --config webpack.dev.js --host 0.0.0.0 --port 3000",
		"clean": "rm -rf dist && mkdir dist",
		"copy": "cp -R src/assets dist/ && cp src/* dist/",
		"prebuild": "yarn clean && mkdir -p dist/assets/graphics/ && yarn run optimize:graphics",
		"build": "webpack --config webpack.prod.js --display-error-details",
		"postbuild": "mkdir -p dist/assets/images/ && yarn run optimize:images && yarn test",
		"optimize:images": "imageOptim -d $npm_package_config_imgdist",
		"optimize:graphics": "svgo -f $npm_package_config_gfxsrc -p 0.5 --multipass --enable=removeDimensions -o $npm_package_config_gfxdist",
		"test": "size-limit",
		"test:url": "npx lighthouse --view $npm_package_config_siteurl && npx sitespeed.io $npm_package_config_siteurl && npx sonarwhal $npm_package_config_siteurl",
		"precommit": "yarn test",
		"prepush": "npm version patch"
	},
	"size-limit": [
		{
			"limit": "50 KB",
			"webpack": false,
			"path": "*.js"
		}
	]
}
